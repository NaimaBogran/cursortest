<%- include('partials/header', { title: 'Calendar - Meeting Tax' }) %>

<div class="calendar-page">
  <div class="page-header">
    <h1>Meeting Calendar</h1>
    <div class="calendar-nav">
      <button class="btn btn-sm" id="prev-month">&larr;</button>
      <span id="current-month">February 2026</span>
      <button class="btn btn-sm" id="next-month">&rarr;</button>
    </div>
  </div>

  <div class="calendar-container">
    <div class="calendar-header">
      <div class="calendar-day-name">Sun</div>
      <div class="calendar-day-name">Mon</div>
      <div class="calendar-day-name">Tue</div>
      <div class="calendar-day-name">Wed</div>
      <div class="calendar-day-name">Thu</div>
      <div class="calendar-day-name">Fri</div>
      <div class="calendar-day-name">Sat</div>
    </div>
    <div id="calendar-grid" class="calendar-grid">
      <!-- Populated by JS -->
    </div>
  </div>

  <!-- Day Detail Sidebar -->
  <div id="day-detail" class="day-detail" style="display: none;">
    <h3 id="detail-date">February 5, 2026</h3>
    <div id="day-meetings">
      <!-- Populated by JS -->
    </div>
    <div class="day-total">
      Total: <span id="day-total-cost">$0</span>
    </div>
  </div>
</div>

<%- include('partials/footer', { pageScript: 'calendar' }) %>
